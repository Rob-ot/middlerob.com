
@import 'nib'

// override the default reset-box-model because it sets outline: 0 which is naughty
reset-box-model() {
  margin: 0
  padding: 0
  border: 0
}
global-reset()
reset-html5()
* {
  box-sizing: border-box
}

@font-face {
  font-family: 'Ostrich Black';
  src: url('/font/ForoLig-webfont.eot?') format('eot'), url('/font/ForoLig-webfont.woff') format('woff'), url('/font/ForoLig-webfont.ttf') format('truetype');
}


COLOR_1 = #EFFFCD
COLOR_2 = #DCE9BE
COLOR_3 = #555152
COLOR_4 = #2E2633
COLOR_5 = #99173C

html, body {
  color: white
  font-family: 'sans-serif'
}

html {
  background: url("/img/spikey.svg") bottom left no-repeat COLOR_4
  box-shadow: 0 1px 0 COLOR_3 inset,
              0 2px 0 COLOR_5 inset,
              0 95px 0 COLOR_3 inset,
              0 96px 0 COLOR_4 inset,
              0 97px 0 COLOR_3 inset

  border-top: 6px solid COLOR_5
  min-height: 100%
}

body {
  background: transparent
  margin: 0 auto
  max-width: 1200px
  min-height: 100%
  padding: 0 16px
  position: relative
}

h1 {
  padding: 16px 0
}
h2, h3, h4, h5, h6 {
  padding: 16px 0 10px 0
}

h1 {
  color: COLOR_1
  font: 30px 'Ostrich Black'
}

h1 a, h2 a, h3 a, h4 a, h5 a, h6 a {
  color: inherit
  text-decoration: none

  &:hover {
    text-decoration: underline
  }
}

h2, h3, h4, h5, h6 {
  color: COLOR_2
}

h2 {
  font-size: 28px
}
h3 {
  font-size: 22px
}

a {
  color: #C22C59
  &:hover {
    text-decoration: none
  }
}

body > header {
  padding: 4px 0 14px 0
  whitespace: nowrap
  width: 100%

  .title {
    padding-bottom: 0
  }

  h1 {
    a {
      font-size: 38px
    }
  }

  h2 {
    font-size: 14px
    padding: 0
  }
}

body > footer, body > footer a {
  color: COLOR_3
  margin: 75px 0 10px 0
  text-align: center
}

.tagCloud {
  max-width: 300px
  a {
    text-decoration: none
  }
}

.pagination {
  font-size: 18px
  padding: 16px

  .page {
    text-decoration: none
    &.current {
      text-decoration: underline
    }
  }
}